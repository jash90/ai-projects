{
  "name": "claude-projects-backend",
  "version": "1.0.0",
  "description": "Backend API for AI Projects",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node start-prod.js",
    "migrate": "tsx src/database/migrate.ts",
    "db:migrate": "tsx src/database/migrate.ts",
    "db:seed": "tsx src/database/seed.ts",
    "check:user": "tsx src/scripts/checkUser.ts",
    "test:token-limits": "tsx src/scripts/testTokenLimitBlocking.ts",
    "debug:token-limits": "tsx src/scripts/debugTokenLimits.ts",
    "inspect:test-db": "tsx src/scripts/inspectTestDB.ts",
    "test": "jest",
    "test:all": "jest --testPathIgnorePatterns=[]",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.60.0",
    "@claude-projects/shared": "workspace:*",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "markdown-it": "^14.1.0",
    "markdown-it-footnote": "^4.0.0",
    "markdown-it-katex": "^2.0.3",
    "markdown-it-table-of-contents": "^1.0.0",
    "mime-types": "^2.1.35",
    "ms": "^2.1.3",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "pg": "^8.11.3",
    "puppeteer": "^24.18.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.5",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.7",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/mime-types": "^2.1.3",
    "@types/ms": "^2.1.0",
    "@types/multer": "^1.4.9",
    "@types/node": "^20.8.7",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.9.1",
    "@typescript-eslint/parser": "^6.9.1",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^4.20.5",
    "typescript": "^5.2.2"
  }
}
