# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgres://claude_user:claude_password@localhost:5432/claude_projects

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.txt,.md,.json,.js,.ts,.html,.css,.py,.java,.cpp,.c,.go,.rs,.php,.rb,.swift

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter API Key (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Application URL (used for OpenRouter API rankings/attribution)
# See: https://openrouter.ai/docs#models
APP_URL=https://your-app-url.com

# Logging
LOG_LEVEL=info

# API Documentation
# Enable Swagger UI (default: true in development, false in production)
ENABLE_SWAGGER=true
# API Base URL for Swagger documentation (default: http://localhost:3001)
API_BASE_URL=http://localhost:3001

# ===========================================
# Observability & Analytics
# ===========================================

# Sentry - Error Tracking & APM (https://sentry.io)
# Get your DSN from Sentry dashboard: Settings > Projects > [your-project] > Client Keys (DSN)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development
# Sample rate for performance monitoring (0.0 to 1.0, e.g., 0.1 = 10% of transactions)
SENTRY_TRACES_SAMPLE_RATE=0.1
# Sample rate for profiling (0.0 to 1.0)
SENTRY_PROFILES_SAMPLE_RATE=0.1
# Enable debug mode for troubleshooting Sentry integration
SENTRY_DEBUG=false
# Set to 'true' to send user IP addresses to Sentry (verify privacy compliance first)
SENTRY_SEND_DEFAULT_PII=false

# PostHog - Product Analytics (https://posthog.com)
# Get your API key from PostHog dashboard: Settings > Project API Key
POSTHOG_API_KEY=
POSTHOG_HOST=https://app.posthog.com
# Set to 'false' to disable PostHog completely
POSTHOG_ENABLED=true

# Prometheus Metrics - For Grafana Cloud scraping
# Enable/disable metrics endpoint at /metrics
METRICS_ENABLED=true
# Path for metrics endpoint (default: /metrics)
METRICS_PATH=/metrics
# Prefix for all metric names (default: aiprojects_)
METRICS_PREFIX=aiprojects_

# ===========================================
# RevenueCat Subscription Billing
# ===========================================
# Secret API key from RevenueCat dashboard: Project Settings > API Keys
REVENUECAT_API_KEY=your-revenuecat-secret-api-key
# Project ID (visible in RC dashboard URL)
REVENUECAT_PROJECT_ID=projb2cb63e6
# Webhook auth secret (generate a random string, must match RC webhook config)
REVENUECAT_WEBHOOK_SECRET=your-webhook-secret