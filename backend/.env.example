# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgres://claude_user:claude_password@localhost:5432/claude_projects

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.txt,.md,.json,.js,.ts,.html,.css,.py,.java,.cpp,.c,.go,.rs,.php,.rb,.swift

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration
# OpenAI API Key (https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic API Key (https://console.anthropic.com/)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# OpenRouter API Key (https://openrouter.ai/keys)
OPENROUTER_API_KEY=your-openrouter-api-key-here

# Application URL (used for OpenRouter API rankings/attribution)
# See: https://openrouter.ai/docs#models
APP_URL=https://your-app-url.com

# Logging
LOG_LEVEL=info

# API Documentation
# Enable Swagger UI (default: true in development, false in production)
ENABLE_SWAGGER=true
# API Base URL for Swagger documentation (default: http://localhost:3001)
API_BASE_URL=http://localhost:3001