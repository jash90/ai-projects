# Server Configuration
NODE_ENV=development
PORT=3001

# Database
DATABASE_URL=postgres://claude_user:claude_password@localhost:5432/claude_projects

# Redis
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here-make-it-long-and-random
JWT_EXPIRES_IN=7d

# File Upload Configuration
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.gif,.pdf,.txt,.md,.json,.js,.ts,.html,.css,.py,.java,.cpp,.c,.go,.rs,.php,.rb,.swift

# CORS
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# AI Configuration (if using external AI service)
OPENAI_API_KEY=your-openai-api-key-here
AI_MODEL=gpt-3.5-turbo

# Logging
LOG_LEVEL=info